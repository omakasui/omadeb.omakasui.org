---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import MarkdownEnhancements from "@/components/MarkdownEnhancements.astro";
import DocsSidebarLeft from "@/components/docs/DocsSidebarLeft.astro";
import TableOfContents from "@/components/docs/TableOfContents";
import { extractHeadingsFromMarkdown } from "@/utils/docs";
import type { CollectionEntry } from "astro:content";

import "@/styles/global.css";
import "@/styles/docs.css";
import "remark-github-blockquote-alert/alert.css";
import "@/styles/markdown.css";

interface Props {
  title?: string;
  currentSlug?: string;
  entry?: CollectionEntry<"docsPages">;
}

const { title, currentSlug = "", entry } = Astro.props;

// Set dynamic page title
const pageTitle = `${title ? `${title} | ` : ""}Omadeb - Manual`;

// Extract headings from markdown content
const headings = entry ? extractHeadingsFromMarkdown(entry.body || "") : [];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Omadeb - A modern, elegant, development-focused setup for Debian."
    />
    <title>{pageTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.svg" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:url" content="https://omadeb.omakasui.org" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Omadeb - A modern, elegant, development-focused setup for Debian."
    />
    <meta
      property="og:description"
      content="Omadeb - A modern, elegant, development-focused setup for Debian."
    />
    <meta
      property="og:image"
      content="https://omadeb.omakasui.org/og-image.png"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="omadeb.omakasui.org" />
    <meta property="twitter:url" content="https://omadeb.omakasui.org" />
    <meta
      name="twitter:title"
      content="Omadeb - A modern, elegant, development-focused setup for Debian."
    />
    <meta
      name="twitter:description"
      content="Omadeb - A modern, elegant, development-focused setup for Debian."
    />
    <meta
      name="twitter:image"
      content="https://omadeb.omakasui.org/og-image.png"
    />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body
    class="font-monospace bg-background text-foreground flex min-h-screen flex-col font-mono text-[14px] leading-[1.6]"
  >
    <Header />

    <div class="docs-container relative">
      <DocsSidebarLeft currentSlug={currentSlug} />

      <div class="docs-main lg:mr-64 lg:ml-64">
        <slot />
      </div>

      <TableOfContents headings={headings} client:load />
    </div>

    <MarkdownEnhancements />
    <Footer />
  </body>
</html>
